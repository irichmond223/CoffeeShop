
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <form asp-controller="Home" asp-action="Validate" id="signIn">
        <fieldset>
            <div class="form-group">
                <label>User Name</label>
                <input type="text" class="form-control" id="username" placeholder="User Name" name="UserName" pattern="[A-Za-z]{1,15}" required />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" placeholder="Password" name="Password" pattern="(?=.*\d)(?=.*[A-Z]).*" required />
                <small>Upper and lower cases, numbers, and special characters: #,$, etc.</small>

            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Remember me
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" class="form-control btn btn-primary" name="Log In" />
                </div>
                </div>
        </fieldset>
            </form>

